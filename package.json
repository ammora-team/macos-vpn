{
  "name": "@ammora/macos-vpn",
  "version": "1.2.1",
  "description": "Bridge NodeObjC to access NetworkingExtensions",
  "license": "MIT",
  "main": "lib/vpn.js",
  "types": "lib/vpn.d.ts",
  "homepage": "https://github.com/ammora-team/macos-vpn#readme",
  "files": [
    "lib",
    "vendor"
  ],
  "keywords": [
    "vpn",
    "objc",
    "macos",
    "osx"
  ],
  "bugs": {
    "url": "https://github.com/ammora-team/macos-vpn/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ammora-team/macos-vpn.git"
  },
  "scripts": {
    "lint": "eslint src/**/*",
    "build": "tsc",
    "prerelease": "rimraf lib/* && npm run build",
    "release": "semantic-release",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "nodobjc": "github:ammora-team/NodObjC#napi"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@commitlint/prompt": "^8.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.5",
    "@types/node": "13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard-with-typescript": "^16.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "4.2.5",
    "prettier": "^2.0.5",
    "rimraf": "3.0.2",
    "semantic-release": "^17.0.7",
    "typescript": "~3.8.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --verbose",
      "pre-commit": "npx lint-staged"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "branches": [
      "master"
    ]
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "eslint",
      "git add"
    ]
  }
}
